#include <iostream>
using namespace std;

void triangles (int x){
  int rows=x;
  int i;
  int j;

  for (i=1; i<=rows; ++i){
  for (j=1; j<=i ; ++j){
    cout << "T";
    }
  cout << endl;
  }

  for (i=rows; i>=1; --i){
  for (j=1; j<=i ; ++j){
    cout << "T";
      }
  cout << endl;
  }

}

int main (){

  int rows;
  cout << "Enter the number of rows you want in each half of your" <<endl;
  cout << "triangle: ";
  cin >> rows;
  cout << endl;
  triangles (rows);
  cout << endl;
  cout << "There!" <<endl;
  cout << endl;
}
